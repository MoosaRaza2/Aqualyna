{% schema %}
{
  "name": "Landing - Elevated",
  "settings": [],
  "presets": [
    { "name": "Landing - Elevated" }
  ]
}
{% endschema %}

{%- liquid
  comment
    Single, precise section (no Theme Editor settings).
    To change media/links, edit the variables below.

    Upload these to Shopify > Content > Files (recommended) OR rename here:
    - elevated-offer-box.png
    - elevated-hero.mp4 (optional)
    - elevated-hero.jpg (fallback)
  endcomment

  assign offer_box_image = 'elevated-offer-box.png'
  assign hero_video = 'elevated-hero.mp4'
  assign hero_image = 'elevated-hero.jpg'

  assign welcome_button_link = '#'
  assign pill_1_link = '#'
  assign pill_2_link = '#'
-%}

<section id="LandingElevated-{{ section.id }}" class="landing-elevated">
  <!-- Offer -->
  <div class="le-offer">
    <div class="page-width">
      <div class="le-offer__inner">
        <div class="le-offer__media" aria-hidden="true">
          <img
            src="{{ offer_box_image | file_url }}"
            alt=""
            loading="lazy"
            width="800"
            height="800"
          >
        </div>

        <div class="le-offer__content">
          <h2 class="le-offer__heading">
            <span class="le-offer__headingBefore">YOUR FIRST ORDER,</span>
            <span class="le-offer__headingAccent">ELEVATED</span>
          </h2>
          <div class="le-offer__subtext">Enjoy $20 off your first Aqualyna purchase</div>

          <a class="le-btn" href="{{ welcome_button_link }}">UNLOCK YOUR WELCOME OFFER</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Hero -->
  <div class="le-hero" role="region" aria-label="Ready to experience Aqualyna">
    <div class="le-hero__media" aria-hidden="true">
      {%- if hero_video != blank -%}
        <video class="le-hero__video" autoplay muted loop playsinline preload="metadata">
          <source src="{{ hero_video | file_url }}" type="video/mp4">
        </video>
      {%- endif -%}

      <img
        class="le-hero__img"
        src="{{ hero_image | file_url }}"
        alt=""
        loading="lazy"
        width="2400"
        height="1400"
      >
    </div>

    <div class="le-hero__overlay">
      <div class="le-hero__pills" aria-label="Hero links">
        <a class="le-pill le-pill--primary" href="{{ pill_1_link }}">SHOP EXTENSIONS</a>
        <a class="le-pill le-pill--secondary" href="{{ pill_2_link }}">FIND YOUR MATCH</a>
      </div>

      <div class="le-hero__headingWrap">
        <h2 class="le-hero__heading">
          <span class="le-hero__headingBefore">READY TO</span>
          <span class="le-hero__headingAccent">EXPERIENCE</span>
          <span class="le-hero__headingAfter">AQUALYNA?</span>
        </h2>
      </div>
    </div>
  </div>
</section>

<style>
  /* -------- Shared tokens (matches your screenshot palette) -------- */
  #LandingElevated-{{ section.id }} {
    --le-accent: #74D0E6;
    --le-text: #111111;
    --le-offer-bg: #F3F5F6;
    --le-pill-text: #0B0B0B;
    --le-pill2-bg: rgba(255, 255, 255, 0.65);
    --le-hero-heading: #FFFFFF;
  }

  /* -------- Offer -------- */
  #LandingElevated-{{ section.id }} .le-offer {
    background: var(--le-offer-bg);
    padding: 56px 0;
  }

  #LandingElevated-{{ section.id }} .le-offer__inner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 64px;
    max-width: 1280px;
    margin: 0 auto;
  }

  #LandingElevated-{{ section.id }} .le-offer__media {
    flex: 0 0 380px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #LandingElevated-{{ section.id }} .le-offer__media img {
    display: block;
    width: 100%;
    height: auto;
    max-width: 380px;
    object-fit: contain;
  }

  #LandingElevated-{{ section.id }} .le-offer__content {
    flex: 0 1 560px;
    text-align: center;
    padding: 0 10px;
  }

  #LandingElevated-{{ section.id }} .le-offer__heading {
    margin: 0 0 10px;
    font-family: 'Gotham-Light', sans-serif;
    font-size: 26px;
    font-weight: 500;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    line-height: 1.1;
    color: var(--le-text);
  }

  #LandingElevated-{{ section.id }} .le-offer__headingAccent {
    color: var(--le-accent);
    font-weight: 700;
    margin-left: 10px;
  }

  #LandingElevated-{{ section.id }} .le-offer__subtext {
    margin: 0 0 16px;
    font-family: 'Gotham-Light', sans-serif;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.06em;
    color: var(--le-text);
    opacity: 0.9;
  }

  #LandingElevated-{{ section.id }} .le-btn {
    display: inline-block;
    padding: 12px 22px;
    border-radius: 999px;
    background: var(--le-accent);
    color: var(--le-pill-text);
    text-decoration: none;
    font-family: 'Gotham-Light', sans-serif;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.10em;
    text-transform: uppercase;
    transition: opacity 0.2s ease;
    white-space: nowrap;
  }

  #LandingElevated-{{ section.id }} .le-btn:hover { opacity: 0.92; }

  /* -------- Hero -------- */
  #LandingElevated-{{ section.id }} .le-hero {
    position: relative;
    width: 100%;
    height: 720px;
    overflow: hidden;
    background: #000;
  }

  #LandingElevated-{{ section.id }} .le-hero__media,
  #LandingElevated-{{ section.id }} .le-hero__img,
  #LandingElevated-{{ section.id }} .le-hero__video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #LandingElevated-{{ section.id }} .le-hero__video {
    z-index: 1;
  }

  #LandingElevated-{{ section.id }} .le-hero__img {
    z-index: 0;
  }

  #LandingElevated-{{ section.id }} .le-hero__overlay {
    position: relative;
    z-index: 2;
    width: 100%;
    height: 100%;
    display: grid;
    grid-template-rows: 1fr auto;
  }

  #LandingElevated-{{ section.id }} .le-hero__pills {
    display: flex;
    justify-content: center;
    gap: 14px;
    padding-top: 170px;
  }

  #LandingElevated-{{ section.id }} .le-pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px 18px;
    border-radius: 999px;
    text-decoration: none;
    font-family: 'Gotham-Light', sans-serif;
    font-size: 10px;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    transition: opacity 0.2s ease, transform 0.2s ease;
    white-space: nowrap;
  }

  #LandingElevated-{{ section.id }} .le-pill:hover {
    opacity: 0.92;
    transform: translateY(-1px);
  }

  #LandingElevated-{{ section.id }} .le-pill--primary {
    background: var(--le-accent);
    color: var(--le-pill-text);
  }

  #LandingElevated-{{ section.id }} .le-pill--secondary {
    background: var(--le-pill2-bg);
    color: #0b0b0b;
    border: 1px solid rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(6px);
  }

  #LandingElevated-{{ section.id }} .le-hero__headingWrap {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    padding-bottom: 44px;
  }

  #LandingElevated-{{ section.id }} .le-hero__heading {
    margin: 0;
    font-family: 'Gotham-Light', sans-serif;
    font-size: 28px;
    font-weight: 500;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    line-height: 1.1;
    color: var(--le-hero-heading);
    text-shadow: 0 2px 10px rgba(0,0,0,0.35);
    text-align: center;
    padding: 0 16px;
  }

  #LandingElevated-{{ section.id }} .le-hero__headingAccent {
    color: var(--le-accent);
    font-weight: 700;
    margin: 0 10px;
  }

  /* -------- Mobile (stacked exactly like your screenshot) -------- */
  @media (max-width: 768px) {
    #LandingElevated-{{ section.id }} .le-offer {
      background: #FFFFFF;
      padding: 22px 0 14px;
    }

    #LandingElevated-{{ section.id }} .le-offer__inner {
      flex-direction: column;
      gap: 10px;
    }

    #LandingElevated-{{ section.id }} .le-offer__media {
      flex: 0 0 auto;
    }

    #LandingElevated-{{ section.id }} .le-offer__media img {
      width: min(220px, 70vw);
      max-width: none;
    }

    #LandingElevated-{{ section.id }} .le-offer__heading {
      font-size: 18px;
      margin-bottom: 8px;
    }

    #LandingElevated-{{ section.id }} .le-offer__subtext {
      font-size: 11px;
      margin-bottom: 14px;
    }

    #LandingElevated-{{ section.id }} .le-btn {
      font-size: 10px;
      padding: 12px 18px;
    }

    #LandingElevated-{{ section.id }} .le-hero {
      height: 820px;
    }

    #LandingElevated-{{ section.id }} .le-hero__pills {
      gap: 10px;
      padding-top: 160px;
      padding-left: 16px;
      padding-right: 16px;
    }

    #LandingElevated-{{ section.id }} .le-pill {
      font-size: 9px;
      padding: 9px 14px;
      font-weight: 800;
    }

    #LandingElevated-{{ section.id }} .le-hero__headingWrap {
      padding-bottom: 38px;
    }

    #LandingElevated-{{ section.id }} .le-hero__heading {
      font-size: 14px;
    }

    #LandingElevated-{{ section.id }} .le-hero__headingAccent {
      font-weight: 800;
      margin: 0 8px;
    }
  }
</style>


