{% schema %}
    {
      "name": "Shade Selector",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "FINDING YOUR PERFECT SHADE IS FREE"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading",
          "default": "Discover your perfect match with two samples for $12, and we'll credit $12 towards your next extension order."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "ORDER COLOR SAMPLES"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ],
      "blocks": [
        {
          "type": "shade",
          "name": "Shade Item",
          "settings": [
            {
              "type": "image_picker",
              "id": "shade_image",
              "label": "Shade Image"
            },
            {
              "type": "text",
              "id": "shade_label",
              "label": "Shade Label"
            },
            {
              "type": "url",
              "id": "shade_link",
              "label": "Custom URL (Product or Collection)"
            }
          ]
        }
      ],
      "max_blocks": 10,
      "presets": [
        {
          "name": "Shade Selector",
          "blocks": [
            { "type": "shade" },
            { "type": "shade" },
            { "type": "shade" }
          ]
        }
      ]
    }
    {% endschema %}
    
    <section class="shade-selector">
      <div class="page-width">
        
        <div class="shade-header">
          <h2>{{ section.settings.heading }}</h2>
          <p>{{ section.settings.subheading }}</p>
        </div>
    
        <div class="shade-grid">
          {% for block in section.blocks %}
            <div class="shade-item" {{ block.shopify_attributes }}>
              {% if block.settings.shade_link != blank %}
                <a href="{{ block.settings.shade_link }}">
              {% endif %}
    
              {% if block.settings.shade_image != blank %}
                <img 
                  src="{{ block.settings.shade_image | image_url: width: 600 }}" 
                  alt="{{ block.settings.shade_label | escape }}"
                  loading="lazy"
                >
              {% endif %}
    
              {% if block.settings.shade_label != blank %}
                <span class="shade-label">
                  {{ block.settings.shade_label }}
                </span>
              {% endif %}
    
              {% if block.settings.shade_link != blank %}
                </a>
              {% endif %}
            </div>
          {% endfor %}
        </div>
    
        {% if section.settings.button_link != blank %}
          <div class="shade-button">
            <a href="{{ section.settings.button_link }}" class="btn">
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
    
      </div>
    </section>
    
    <style>
    .shade-selector {
      padding: 60px 0;
      text-align: center;
      background: #f6f6f6;
    }
    
    .shade-header h2 {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 10px;
    }
    
    .shade-header p {
      font-size: 14px;
      max-width: 700px;
      margin: 0 auto 40px;
      color: #666;
    }
    
    .shade-grid {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;
    }
    
    .shade-item {
      position: relative;
      width: 140px;
      border-radius: 16px;
      overflow: hidden;
      transition: 0.3s ease;
    }
    
    .shade-item img {
      width: 100%;
      display: block;
      border-radius: 16px;
    }
    
    .shade-item:hover {
      transform: translateY(-5px);
    }
    
    .shade-label {
      position: absolute;
      bottom: 10px;
      left: 0;
      right: 0;
      font-size: 14px;
      color: #fff;
      font-weight: 500;
    }
    
    .shade-button {
      margin-top: 40px;
    }
    
    .shade-button .btn {
      background: #63c3c7;
      padding: 12px 24px;
      border-radius: 30px;
      color: #fff;
      text-decoration: none;
      font-size: 14px;
      display: inline-block;
    }
    </style>
    