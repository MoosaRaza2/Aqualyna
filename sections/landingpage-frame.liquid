{% schema %}
    {
      "name": "Shade Selector",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "FINDING YOUR PERFECT SHADE IS FREE"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading",
          "default": "Discover your perfect match with two samples for $12, and we'll credit $12 towards your next extension order."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "ORDER COLOR SAMPLES"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ],
      "blocks": [
        {
          "type": "shade",
          "name": "Shade Item",
          "settings": [
            {
              "type": "image_picker",
              "id": "shade_image",
              "label": "Shade Image"
            },
            {
              "type": "text",
              "id": "shade_label",
              "label": "Shade Label"
            },
            {
              "type": "url",
              "id": "shade_link",
              "label": "Custom URL (Product / Collection / Page)"
            }
          ]
        }
      ],
      "max_blocks": 12,
      "presets": [
        {
          "name": "Shade Selector",
          "blocks": [
            { "type": "shade" },
            { "type": "shade" },
            { "type": "shade" },
            { "type": "shade" }
          ]
        }
      ]
    }
    {% endschema %}
    
    <section class="shade-selector">
      <div class="page-width">
    
        <div class="shade-header">
          <h2>{{ section.settings.heading }}</h2>
          <p>{{ section.settings.subheading }}</p>
        </div>
    
        <div class="shade-grid">
          {% for block in section.blocks %}
            <div class="shade-item" {{ block.shopify_attributes }}>
              {% if block.settings.shade_link != blank %}
                <a href="{{ block.settings.shade_link }}">
              {% endif %}
    
              {% if block.settings.shade_image != blank %}
                <img
                  src="{{ block.settings.shade_image | image_url: width: 600 }}"
                  alt="{{ block.settings.shade_label | escape }}"
                  loading="lazy"
                >
              {% endif %}
    
              {% if block.settings.shade_label != blank %}
                <span class="shade-label">
                  {{ block.settings.shade_label }}
                </span>
              {% endif %}
    
              {% if block.settings.shade_link != blank %}
                </a>
              {% endif %}
            </div>
          {% endfor %}
        </div>
    
        {% if section.settings.button_link != blank %}
          <div class="shade-button">
            <a href="{{ section.settings.button_link }}" class="shade-btn">
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
    
      </div>
    </section>
    
    <style>
    .shade-selector {
      padding: 60px 20px;
      background: #f6f6f6;
      text-align: center;
    }
    
    .shade-header h2 {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 10px;
    }
    
    .shade-header p {
      font-size: 14px;
      max-width: 700px;
      margin: 0 auto 40px;
      color: #666;
    }
    
    /* Grid Layout */
    .shade-grid {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;
    }
    
    /* Item */
    .shade-item {
      position: relative;
      width: 150px;
      border-radius: 18px;
      overflow: hidden;
      transition: transform 0.3s ease;
      flex-shrink: 0;
    }
    
    .shade-item img {
      width: 100%;
      display: block;
      border-radius: 18px;
    }
    
    .shade-item:hover {
      transform: translateY(-6px);
    }
    
    /* Label */
    .shade-label {
      position: absolute;
      bottom: 12px;
      left: 0;
      right: 0;
      font-size: 14px;
      font-weight: 500;
      color: #fff;
      text-align: center;
    }
    
    /* Button */
    .shade-button {
      margin-top: 40px;
    }
    
    .shade-btn {
      display: inline-block;
      padding: 12px 26px;
      background: #63c3c7;
      color: #fff;
      text-decoration: none;
      border-radius: 30px;
      font-size: 14px;
      transition: opacity 0.3s ease;
    }
    
    .shade-btn:hover {
      opacity: 0.9;
    }
    
    /* Tablet */
    @media (max-width: 990px) {
      .shade-item {
        width: 130px;
      }
    }
    
    /* Mobile Scroll */
    @media (max-width: 768px) {
    
      .shade-selector {
        padding: 40px 0;
      }
    
      .shade-header h2 {
        font-size: 22px;
        padding: 0 20px;
      }
    
      .shade-header p {
        font-size: 13px;
        padding: 0 20px;
      }
    
      .shade-grid {
        flex-wrap: nowrap;
        overflow-x: auto;
        justify-content: flex-start;
        padding: 0 20px 10px;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
      }
    
      .shade-grid::-webkit-scrollbar {
        display: none;
      }
    
      .shade-item {
        width: 120px;
        scroll-snap-align: start;
      }
    }
    </style>
    